{
  "variables": {
    "ami_name": "",
    "local_ip": "",
    "source_ami": ""
  },
  "builders": [
    {
      "access_key": "",
      "ami_groups": [
        "all"
      ],
      "ami_name": "{{user `ami_name`}}-{{isotime \"20060102150405\"}}",
      "ami_regions": [
        "us-east-1",
        "us-east-2",
        "us-west-2",
        "eu-central-1",
        "eu-north-1", 
        "eu-west-1"
      ],
      "instance_type": "c4.xlarge",
      "region": "us-east-1",
      "secret_key": "",
      "source_ami": "{{user `source_ami`}}",
      "ssh_file_transfer_method": "sftp",
      "ssh_pty": true,
      "ssh_username": "ec2-user",
      "tags": {
        "SourceAMI": "{{user `source_ami`}}"
      },
      "temporary_security_group_source_cidr": "{{user `local_ip`}}/32",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./modules",
      "destination": "/tmp"
    },
    {
      "scripts": [
        "scripts/yum.sh",
        "scripts/postfix.sh",
        "scripts/rpcbind.sh",
        "scripts/dos2unix.sh",
        "scripts/root.sh",
        "scripts/selinux.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }

  ]
}
